<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/style_radius_3"
    android:layout_margin="4dp"
    android:paddingTop="4dp"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="80dp"
            android:paddingVertical="16dp"
            android:padding="8dp"
            android:gravity="right|center_vertical"
            android:orientation="vertical">
            <ImageView
                android:layout_margin="4dp"
                android:layout_width="90dp"
                android:scaleType="fitXY"
                android:id="@+id/tv_item_book_image"
                android:src="@drawable/bg_main"
                android:layout_gravity="center_horizontal"
                android:layout_height="140dp"/>

        </LinearLayout>
        <LinearLayout
            android:layout_marginVertical="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_item_book_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sách: MS01"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_book_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:singleLine="false"
                android:text="Tên sách: Hình học không gian"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_book_book_collection_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục sách: Sách giáo khoa"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />
            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:orientation="vertical"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/tv_item_book_locate"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vị trí sách: dãy 2"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_item_book_quantity"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Số lượng: 02 quyển"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>

            </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/img_item_book_delete"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@android:drawable/ic_delete" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="20dp"/>
            <ImageView
                android:id="@+id/img_item_book_edit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                app:srcCompat="@drawable/ic_pencil" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="1"
                android:layout_height="20dp"/>
        </LinearLayout>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>