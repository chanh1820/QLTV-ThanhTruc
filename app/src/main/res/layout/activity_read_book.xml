<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".view.user.docsach.ReadBookActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:padding="8dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục:"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spn_list_book_reading_choose_collection"
                android:layout_width="180dp"
                android:layout_height="40dp"
                android:background="@drawable/style_spinner"
                android:dropDownVerticalOffset="40dp" />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lớp:"
                android:textAlignment="center"
                android:textColor="@color/purple_500"
                android:textSize="20sp"
                android:textStyle="bold" />
            <Spinner
                android:id="@+id/spn_list_book_reading_choose_class_room"
                android:layout_width="150dp"
                android:layout_height="40dp"
                android:background="@drawable/style_spinner"
                android:dropDownVerticalOffset="40dp" />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginVertical="8dp"
        android:layout_height="wrap_content">
        <EditText
            android:paddingLeft="8dp"
            android:layout_margin="8dp"
            android:id="@+id/edt_book_reading_input_search"
            android:background="@drawable/custom_background_num_exam"
            android:layout_width="match_parent"
            android:hint="Tìm sách ..."
            android:layout_height="60dp"
            />
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rv_read_book"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
</LinearLayout>