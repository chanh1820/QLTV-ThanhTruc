<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="16dp">


        <TextView
            android:id="@+id/tv_item_suggest_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ọc cơ sở : Môn:  Mĩ thuật"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_item_suggest_book_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng : 5 | Vị trí: dãy 2"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="130dp"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingRight="16dp"
        android:paddingVertical="16dp"
        android:gravity="right|center_vertical"
        android:orientation="vertical">
        <ImageView

            android:id="@+id/img_item_suggest_add_book"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_add_circle_24_2"/>
    </LinearLayout>
</LinearLayout>