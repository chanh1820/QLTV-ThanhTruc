<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:id="@+id/ln_item_video_parent"
    android:padding="4dp"
    android:layout_height="wrap_content">
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/imv_item_video_thumbnail"
            android:layout_width="192dp"
            android:layout_height="108dp"
            android:background="@drawable/thumbnail_detault"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:textStyle="bold"
            android:textSize="16dp"
            android:id="@+id/tv_item_video_name"
            android:layout_gravity="center"
            android:layout_margin="4dp"
            android:textColor="@color/black"
            android:text="Bài 1: Giao động điều hoàn Giao động điều hoàn Giao động điều hoàn Giao động điều hoàn"
            />
    </LinearLayout>
</LinearLayout>