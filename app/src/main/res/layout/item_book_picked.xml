<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginVertical="4dp"
    android:focusableInTouchMode="true"
    android:layout_gravity="center_vertical"
    android:background="@drawable/style_radius_4"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="horizontal"
        android:paddingLeft="16dp">

        <TextView
            android:id="@+id/tv_item_picked_book_quantity"
            android:layout_width="30dp"

            android:layout_height="wrap_content"
            android:layout_gravity="start|center_vertical"
            android:layout_marginBottom="5dp"
            android:text="(1)"
            android:textColor="#F44336"
            android:textSize="18sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_item_picked_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hình học không giangianHình học không gianHìngianHình học không gianHìn"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />


    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingVertical="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_item_picked_remove_book"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_baseline_close_24"/>
    </LinearLayout>
</LinearLayout>