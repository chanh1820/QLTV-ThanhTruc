<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:focusableInTouchMode="true"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="8dp"
    android:background="@drawable/style_radius_3"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_marginVertical="8dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="4"
        android:orientation="vertical"
        android:paddingLeft="16dp">


        <TextView
            android:padding="10dp"
            android:background="@drawable/style_radius_2"
            android:id="@+id/tv_item_transaction_list_book_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="(2)Hình học không gian\n(1)Văn học việt nam"
            android:textColor="#00BCD4"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_item_transaction_student_info"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nguyễn Văn A | 6A1"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:layout_marginLeft="4dp"
            android:id="@+id/tv_item_transaction_time_line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="06/05/2023 - 06/07/2023"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:textStyle="bold" />
    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="1"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:paddingVertical="16dp"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/img_item_transaction_refund"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_margin="16dp"
            android:layout_gravity="right|center_vertical"
            app:srcCompat="@drawable/ic_baseline_wifi_protected_setup_24" />
    </LinearLayout>
</LinearLayout>