<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="top"
    android:layout_marginBottom="160dp"
    tools:context=".view.doimatkhau.ChangePasswordActivity">
    <Button
        android:layout_gravity="top"
        android:id="@+id/btn_back_change_password"
        android:layout_width="wrap_content"
        android:text="Quay lại"
        android:layout_margin="8dp"
        android:background="@drawable/style_radius_1"
        android:layout_marginBottom="150dp"
        android:layout_height="wrap_content"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Mật khẩu cũ: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_change_password_pass_word_old"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Mật khẩu mới: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_change_password_pass_word_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            />
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_marginTop="18dp"
        android:layout_marginHorizontal="24dp"
        android:layout_height="wrap_content">
        <TextView
            android:text="Nhập lại mật khẩu mới: "
            android:textColor="@color/black"
            android:textStyle="bold"
            android:textSize="14sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/edt_change_password_pass_word_re_new"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawablePadding="12dp"
            />
    </LinearLayout>
    <Button
        android:id="@+id/btn_change_password_accept"
        android:layout_width="wrap_content"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginTop="24dp"
        android:background="@drawable/style_radius_3"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Đồng ý" />
</LinearLayout>