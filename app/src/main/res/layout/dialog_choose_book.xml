<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="20dp"
    android:background="@drawable/custom_background_num_exam"
    android:layout_margin="8dp">
    <TextView
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Danh mục sách"
        android:textStyle="bold"
        android:textColor="@color/black"
        android:textSize="28sp"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <GridView
            android:gravity="center"
            android:paddingBottom="40dp"
            android:paddingTop="20dp"
            android:maxHeight="400dp"
            android:paddingHorizontal="10dp"
            android:background="@drawable/style_bg_dialog_girdview"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            android:id="@+id/gv_book_collection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:numColumns="1"
            android:horizontalSpacing="4dp"

            android:verticalSpacing="4dp"
            />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:id="@+id/btn_dialog_book_collection_back"
            android:background="@drawable/ic_dialog_sub_collection_back"
            android:text="Trở lại"
            android:textColor="@color/white"
            android:textSize="24dp"
            android:paddingVertical="8dp"
            app:layout_constraintHorizontal_bias="0.497"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintBottom_toBottomOf="@id/gv_book_collection"
            app:layout_constraintVertical_bias="0.48" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>