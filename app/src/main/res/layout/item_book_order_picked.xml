<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="4dp"
    android:background="@drawable/style_radius_3"
    android:focusableInTouchMode="true"
    android:orientation="vertical"
    android:paddingTop="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="8dp"
            android:layout_weight="4"
            android:orientation="vertical"
            android:paddingLeft="16dp">

            <TextView
                android:id="@+id/tv_item_book_order_picked_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Mã sách: MS01"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_book_order_picked_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Tên sách: Hình học không gianTên sách: Hình học không gianTên sách: Hình học không gian"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_item_book_order_picked_book_collection_code"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Danh mục sách: Sách giáo khoa"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/btn_book_order_picked_decrease"
                    android:background="@drawable/ic_decrease" />
                <TextView
                    android:layout_width="40dp"
                    android:text="12"
                    android:textSize="24dp"
                    android:id="@+id/tv_item_book_order_picked_quantity"
                    android:gravity="center"
                    android:layout_height="wrap_content"/>
                <Button
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:id="@+id/btn_book_order_picked_increase"
                    android:background="@drawable/ic_increase" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"/>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/imv_item_book_order_picked_image"
                android:layout_width="110dp"
                android:layout_height="160dp"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:src="@drawable/bg_main" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout>