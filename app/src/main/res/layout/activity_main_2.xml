<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/bg_main_2"
    tools:context=".view.admin.main.MainActivity"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageButton
            android:id="@+id/imv_settings"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:background="@color/white"
            android:backgroundTint="#00FFFFFF"
            android:src="@drawable/ic_baseline_settings_24" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_margin="8dp"
        android:orientation="vertical"
        android:padding="4dp">
        <TextClock
            android:text="Thu 12:12:02 00:00:00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:id="@+id/textclock"
            android:textColor="@color/white"
            android:layout_gravity="center_horizontal"
            android:format24Hour="E, d-M-yyyy k:m:sa"
            android:format12Hour="k:m:sa"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="152dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="20dp" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="30dp">
            <Button
                android:backgroundTint="@android:color/holo_red_light"
                android:gravity="left|center_vertical"
                android:id="@+id/btn_main_danh_muc"
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_baseline_collections_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:text="  Danh mục"/>
            <Button
                android:id="@+id/btn_main_sach"
                android:backgroundTint="@android:color/holo_green_light"
                android:layout_marginVertical="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:gravity="left|center_vertical"
                android:textStyle="bold"
                android:textSize="20sp"
                android:drawableLeft="@drawable/ic_baseline_library_books_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:text=" Sách"/>

            <Button
                android:id="@+id/btn_main_them_phieu_muon"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:backgroundTint="@android:color/holo_blue_light"
                android:drawableLeft="@drawable/ic_baseline_note_add_24"

                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:gravity="left|center_vertical"
                android:text="  Thêm Phiếu Mượn"
                android:textColor="@color/white"
                android:textSize="18sp"
                android:textStyle="bold" />

            <Button
            android:backgroundTint="@android:color/holo_orange_light"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:textSize="18sp"
            android:id="@+id/btn_main_danh_sach_phieu"
            android:gravity="left|center_vertical"
            android:drawableLeft="@drawable/ic_baseline_assignment_24"
            android:drawableRight="@drawable/ic_baseline_chevron_right_24"
            android:textColor="@color/white"
            android:textStyle="bold"
            android:text="  Danh sách phiếu"/>
            <Button
                android:backgroundTint="@color/holo_purple_11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="16dp"
                android:textSize="18sp"
                android:id="@+id/btn_main_danh_sach_dat_truoc"
                android:gravity="left|center_vertical"
                android:drawableLeft="@drawable/baseline_history_24"
                android:drawableRight="@drawable/ic_baseline_chevron_right_24"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:text="  Danh sách đặt trước"/>
        </LinearLayout>
        <LinearLayout
            android:gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">



        </LinearLayout>


    </LinearLayout>
</LinearLayout>